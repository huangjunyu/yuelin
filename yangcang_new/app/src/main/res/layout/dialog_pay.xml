<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="349.0px"
    android:layout_height="500.0px"
    android:background="#00000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="20dp"
        android:background="@mipmap/backgrounddialog"
        android:orientation="vertical">

        <ImageView
            android:id="@id/payqrcode"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="220.0"
            android:padding="5dp"
            android:gravity="center"
            android:src="@mipmap/qrcodelogin" />

        <TextView
            android:id="@id/duedate"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="100.0"
            android:gravity="center"
            android:text="到期时间：2017年10月6日"
            android:textColor="#ff000000"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="106.0">

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="183.0" />

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="118.0"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="26.0" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="104.0">

                    <ImageButton
                        android:id="@id/ok"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:background="#00ffffff"
                        android:scaleType="fitXY"
                        android:src="@drawable/buttonok" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="26.0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="183.0" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>