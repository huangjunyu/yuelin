<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/fullscreen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/backgroundmain"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="200.0"
        android:orientation="horizontal">

        <ImageButton
            android:id="@id/back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#00ffffff"
            android:scaleType="fitCenter"
            android:src="@drawable/buttonreturn" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="400.0"
        android:orientation="horizontal">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="100.0"
        android:orientation="horizontal">
        <com.yuelin.o2cabin.AZSideBarView
            android:id="@+id/bar_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:hintShape="rectangle"/>

    </LinearLayout>


</LinearLayout>