<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fullscreen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/backgroundadmin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="300.0">

        <TextView
            android:id="@+id/activity_pwd_version_name"
            android:layout_width="fill_parent"
            android:layout_height="30.0dip"
            android:layout_gravity="bottom"
            android:background="#00ffffff"
            android:text="软件版本(V13): 2017-11-23 00:20"
            android:textColor="#ffffffff"
            android:textSize="20.0dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="424.0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="200.0" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="64.0"
            android:background="#00ffffff"
            android:gravity="bottom"
            android:text="密码:"
            android:textColor="#ffffffff"
            android:textSize="20.0dip" />

        <EditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="64.0"
            android:background="@mipmap/admininput"
            android:imeOptions="actionDone"
            android:numeric="integer"
            android:password="true" />

        <ImageButton
            android:id="@+id/enter"
            android:layout_width="100.0dip"
            android:layout_height="0.0dip"
            android:layout_weight="128.0"
            android:background="#00ffffff"
            android:scaleType="fitXY"
            android:src="@drawable/buttonenter"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="264.0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="300.0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="408.0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="127.0"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="82.0" />

            <ImageButton
                android:id="@+id/back"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="135.0"
                android:background="#00ffffff"
                android:scaleType="fitXY"
                android:src="@drawable/buttonreturn" />

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="82.0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="65.0" />
    </LinearLayout>
</LinearLayout>